{
  "name": "e-commerce-server",
  "version": "1.0.0",
  "engines": {
    "node": "12.16.1",
    "npm": "6.13.7"
  },
  "description": "backend carca e-commerce",
  "main": "server.js",
  "scripts": {
    "client": " cd .. && cd client && npm start",
    "server": "nodemon src/server.js",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd .. && cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "author": "Diego Dario",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "stripe": "^8.24.0"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.2"
  }
}